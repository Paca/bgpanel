			<!-- Move all files from extracted folders to dest -->
			<move>multitheftauto_linux-1.3.2/*, .</move>
			<move>baseconfig/*, mods/deathmatch</move>
			<!-- Delete Downloaded Archives -->
			<delete>multitheftauto_linux-1.3.2.tar.gz</delete>
			<delete>baseconfig.tar.gz</delete>
			<delete>multitheftauto_linux-1.3.2</delete>
			<delete>baseconfig</delete>
